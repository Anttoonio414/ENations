@model IEnumerable<ENations.Models.PartyMember>

@{
    ViewData["Title"] = "Index";
}

<h1>Party Members</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                Political Party
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoliticalParty.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.PartyMemberId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PartyMemberId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PartyMemberId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
