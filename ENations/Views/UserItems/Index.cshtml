@model IEnumerable<ENations.Models.UserItems>

@{
    ViewData["Title"] = "Index";
}

<h1>User Items</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserItemsId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserItemsId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserItemsId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
