@model IEnumerable<ENations.Models.Message>

@{
    ViewData["Title"] = "Index";
}

<h1>Messages</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Likes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chat.ChatId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sender.Username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MessageId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MessageId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MessageId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
