@model IEnumerable<ENations.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h1>Companies</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quality)
            </th>
            <th>
                Last Worked
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quality)
            </td>
            <td>
                    @item.LastWorked.ToString("yyyy-MM-dd")
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompanyId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CompanyId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CompanyId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
