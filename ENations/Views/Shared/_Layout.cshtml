<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ENations</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ENations.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">ENations</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Dropdown for Geographic Entities -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="geoEntitiesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Geographic Entities
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="geoEntitiesDropdown">
                                <li><a class="dropdown-item" href="/Countries/Index">Countries</a></li>
                                <li><a class="dropdown-item" href="/Regions/Index">Regions</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown for Political and Legislative -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="politicalLegislativeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Political and Legislative
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="politicalLegislativeDropdown">
                                <li><a class="dropdown-item" href="/CongressMembers/Index">Congress Members</a></li>
                                <li><a class="dropdown-item" href="/LawProposals/Index">Law Proposal</a></li>
                                <li><a class="dropdown-item" href="/PartyMembers/Index">Party Members</a></li>
                                <li><a class="dropdown-item" href="/PoliticalParties/Index">Political Parties</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown for Media and Communication -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="mediaCommunicationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Media and Communication
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="mediaCommunicationDropdown">
                                <li><a class="dropdown-item" href="/Articles/Index">Articles</a></li>
                                <li><a class="dropdown-item" href="/Newspapers/Index">Newspapers</a></li>
                                <li><a class="dropdown-item" href="/Chats/Index">Chats</a></li>
                                <li><a class="dropdown-item" href="/Messages/Index">Messages</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown for Business and Finance -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="businessFinanceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Business and Finance
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="businessFinanceDropdown">
                                <li><a class="dropdown-item" href="/Companies/Index">Companies</a></li>
                                <li><a class="dropdown-item" href="/CountryFunds/Index">Country Funds</a></li>
                                <li><a class="dropdown-item" href="/ItemOffers/Index">Item Offers</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown for Individuals and User Engagement -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userEngagementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Individuals and User Engagement
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="userEngagementDropdown">
                                <li><a class="dropdown-item" href="/Users/Index">Users</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ENations - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
